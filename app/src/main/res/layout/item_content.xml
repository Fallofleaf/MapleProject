<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selected"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/item_content_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/dong_cokor_btn_text"
        android:textSize="@dimen/text_content_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16" />

    <TextView
        android:id="@+id/item_content_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/text_content_size"
        app:layout_constraintBottom_toBottomOf="@+id/item_content_kind"
        app:layout_constraintStart_toEndOf="@+id/item_content_kind"
        app:layout_constraintTop_toTopOf="@+id/item_content_kind"
        app:layout_constraintVertical_bias="0.0"
        tools:text="起点中文网" />

    <TextView
        android:id="@+id/item_content_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="@dimen/text_content_size"
        app:layout_constraintBottom_toBottomOf="@+id/item_content_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_content_note"
        tools:text="-16" />

</androidx.constraintlayout.widget.ConstraintLayout>